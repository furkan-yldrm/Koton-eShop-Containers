<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eShopOnContainers.Core.Views.SignUpPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="20">
            <Label Text="Hesap oluşturun" HorizontalOptions="Center" TextColor="Black" FontSize="30" Margin="0,20"/>
            <Entry Placeholder="E-mail" Keyboard="Email" x:Name="EmailInput"/>
            <Entry Placeholder="Şifre" IsPassword="True" x:Name="PassordInput"/>
            <Button Text="Kayıt Ol" TextColor="Black" Clicked="Button_Clicked" Margin="60,40" BackgroundColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>