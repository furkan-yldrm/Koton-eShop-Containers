<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eShopOnContainers.Core.Views.Deneme">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="koton_logo.png"/>

            <Label
                Text="Hesabını Oluştur"
                HorizontalOptions="Center"
                TextColor="Black"
                FontSize="25"
                Margin="0 , 20"/>
            <Entry
                Placeholder="E-mail"
                Keyboard="Email"
                x:Name="EmailInput"/>
            <Entry
                Placeholder="Şifre"
                IsPassword="True"
                x:Name="PasswordInput"/>
            <Button
                Text="Kayıt OL"
                Clicked="Button_Clicked"
                Margin="60,40"
                BackgroundColor="#4682B4"
                TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>